{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "../..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "../..",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "index.ts",
    "email.ts",
    "../../src/lib/db.ts",
    "../../src/lib/weather.ts",
    "../../src/lib/weather-openweather.ts",
    "../../src/lib/weather-tomorrow.ts",
    "../../src/lib/airportdb.ts",
    "../../src/lib/temperature.ts",
    "../../src/lib/utils.ts",
    "../../src/services/weather-validation.ts",
    "../../src/services/cancellation-calculator.ts",
    "../../src/types/**/*.ts",
    "../../src/constants/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../../src/**/*.tsx",
    "../../src/components",
    "../../src/app",
    "../../src/hooks",
    "../../src/server",
    "../../emails",
    "../../src/lib/email.ts",
    "../../src/lib/trpc.ts",
    "../../src/lib/auth.ts",
    "../../src/lib/auth-server.ts",
    "../../src/lib/ai.ts",
    "../../src/lib/env.ts",
    "../../src/services/weather-service.ts",
    "../../src/services/flight-service.ts",
    "../../src/services/notification-service.ts",
    "../../src/services/ai-reschedule-service.ts"
  ]
}

