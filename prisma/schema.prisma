// Prisma database schema for SkyShift application
// Configured for Supabase PostgreSQL (works with any PostgreSQL)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - represents students, instructors, and admins
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          UserRole  @default(STUDENT)
  trainingLevel TrainingLevel? @default(STUDENT)
  temperatureUnit TemperatureUnit @default(FAHRENHEIT)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts              Account[]
  sessions              Session[]
  studentBookings       Booking[]      @relation("StudentBookings")
  instructorBookings    Booking[]      @relation("InstructorBookings")

  @@map("users")
}

// Account model - for OAuth providers (future use)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session model - for NextAuth.js database sessions
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// VerificationToken model - for email verification (NextAuth)
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// User role enum
enum UserRole {
  STUDENT
  INSTRUCTOR
  ADMIN
}

// Training level enum for pilots
enum TrainingLevel {
  STUDENT
  PRIVATE
  INSTRUMENT
  COMMERCIAL
}

// Temperature unit preference
enum TemperatureUnit {
  FAHRENHEIT
  CELSIUS
}

// Flight status enum
enum FlightStatus {
  SCHEDULED
  AT_RISK
  CANCELLED
  RESCHEDULED
  COMPLETED
}

// Risk level enum for weather assessment
enum RiskLevel {
  LOW
  MODERATE
  HIGH
  EXTREME
}

// Weather source enum
enum WeatherSource {
  OPENWEATHER
  TOMORROW_IO
}

// Booking model - represents flight bookings
model Booking {
  id                    String      @id @default(cuid())
  studentId             String
  instructorId           String
  scheduledDate          DateTime
  status                 FlightStatus @default(SCHEDULED)
  trainingLevel          TrainingLevel
  duration               Float       // Duration in hours
  departureLocation      Json        // { name, latitude, longitude, icaoCode? }
  destinationLocation    Json?       // Optional for cross-country flights
  cancellationProbability Int?       // 0-100 percentage
  riskLevel              RiskLevel?
  notes                  String?     @db.Text
  createdAt              DateTime    @default(now())
  updatedAt              DateTime    @updatedAt

  // Relations
  student                User        @relation("StudentBookings", fields: [studentId], references: [id], onDelete: Cascade)
  instructor             User        @relation("InstructorBookings", fields: [instructorId], references: [id], onDelete: Cascade)
  weatherLogs            WeatherLog[]

  @@index([studentId])
  @@index([instructorId])
  @@index([scheduledDate])
  @@index([status])
  @@map("bookings")
}

// WeatherLog model - tracks weather checks for bookings
model WeatherLog {
  id                    String        @id @default(cuid())
  bookingId             String
  weatherData           Json          // Raw API response data
  weatherSource          WeatherSource
  cancellationProbability Int?        // Calculated probability (0-100)
  riskLevel              RiskLevel?
  conflictDetails        Json?         // Which minimums were violated
  checkedAt              DateTime      @default(now())

  // Relations
  booking                Booking       @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([checkedAt])
  @@map("weather_logs")
}